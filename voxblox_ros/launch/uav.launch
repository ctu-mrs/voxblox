<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="debug_roslaunch"/>

  <group ns="$(arg uav_name)">

    <node name="voxblox_node" pkg="voxblox_ros" type="tsdf_server" output="screen" args="-alsologtostderr" clear_params="true" launch-prefix="$(arg launch_prefix)" >
      <param name="method" value="simple" />

      <remap from="pointcloud" to="vofod/background_clusters_pc"/>
      <remap from="freespace_pointcloud" to="freespace_pc/points_freespace"/>
      <param name="world_frame" value="$(arg uav_name)/rtk_origin"/>

      <param name="use_freespace_pointcloud" value="true" />
      <param name="min_ray_length_m" value="1.2" />
      <param name="max_ray_length_m" value="25.0" />
      <param name="use_const_weight" value="true" />
      <param name="allow_clear" value="true" />

      <param name="tsdf_voxel_size" value="0.25" />
      <param name="tsdf_voxels_per_side" value="16" />
      <param name="truncation_distance" value="1.0" />
      <param name="max_weight" value="10000.0" />

      <param name="enable_icp" value="true" />
      <param name="icp_refine_roll_pitch" value="false" />

      <param name="update_mesh_every_n_sec" value="1.0" />
      <param name="output_mesh_as_pointcloud" value="true" />
      <param name="output_mesh_as_pcl_mesh" value="true" />
      <param name="slice_level" value="0.5" />
      <param name="color_ptcloud_by_weight" value="true" />
      <param name="mesh_filename" value="" />
      <param name="color_mode" value="normals" />
      <param name="mesh_min_weight" value="1e-4" />

      <param name="publish_pointclouds" value="true" />
      <param name="publish_tsdf_map" value="true" />
      <param name="publish_tsdf_info" value="true" />
      <param name="publish_esdf_map" value="true" />

      <param name="publish_traversable" value="false" />
      <param name="traversability_radius" value="false" />

      <param name="intensity_colormap" value="rainbow" />
      <param name="intensity_max_value" value="100" />

      <param name="verbose" value="true" />
    </node>
    
  </group>

</launch>
